generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =====================================================
// ENUMS
// =====================================================

enum EmployeeStatus {
  ACTIVE
  RESIGNED
  PROBATION
  SUSPENDED
}

enum SalaryType {
  MONTHLY
  DAILY
}

enum CheckKind {
  IN
  OUT
}

enum PayrollStatus {
  DRAFT
  FINAL
}

enum PayrollMode {
  PAY_PERIOD
  ROLLING_7_DAYS
  ISO_WEEK
}

enum AttendanceStatus {
  OK
  ABSENT
  LATE
  LEAVE
}

enum HolidayKind {
  PUBLIC
  COMPANY
  SPECIAL
}

enum AuditAction {
  CREATE
  UPDATE
  DELETE
  LOGIN
  LOGOUT
  SYNC
  GENERATE
}

// =====================================================
// CORE MODELS
// =====================================================

model Employee {
  id          String         @id @default(cuid())
  teamId      String // comes from StackAuth Team ID
  code        String
  name        String
  position    String?
  department  String?
  salaryType  SalaryType
  baseSalary  Decimal        @db.Decimal(12, 2)
  otEligible  Boolean        @default(true)
  ssfEligible Boolean        @default(true)
  status      EmployeeStatus @default(ACTIVE)
  active      Boolean        @default(true)

  otProfileId String?
  otProfile   OtProfile? @relation(fields: [otProfileId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  faces       FaceEmbedding[]
  checkEvents CheckEvent[]
  attendance  AttendanceDay[]
  payrollRows PayrollRow[]

  @@unique([teamId, code])
  @@index([teamId, active])
}

// =====================================================
// FACE EMBEDDING & ATTENDANCE
// =====================================================

model FaceEmbedding {
  id           String   @id @default(cuid())
  teamId       String
  employeeId   String
  employee     Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  vector       Bytes
  version      String
  embeddingDim Int      @default(512)
  createdAt    DateTime @default(now())

  @@index([teamId, employeeId])
}

model CheckEvent {
  id         String    @id @default(cuid())
  teamId     String
  employeeId String
  employee   Employee  @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  kind       CheckKind
  ts         DateTime
  source     String?
  timezone   String?
  liveness   Boolean   @default(false)
  latitude   Decimal?  @db.Decimal(9, 6)
  longitude  Decimal?  @db.Decimal(9, 6)
  accuracy   Decimal?  @db.Decimal(5, 2)
  createdAt  DateTime  @default(now())

  @@index([teamId, ts])
  @@index([teamId, employeeId, ts])
}

model AttendanceDay {
  id          String           @id @default(cuid())
  teamId      String
  employeeId  String
  employee    Employee         @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  date        DateTime
  workMinutes Int              @default(0)
  lateMinutes Int              @default(0)
  otWeekday   Int              @default(0)
  otWeekend   Int              @default(0)
  otHoliday   Int              @default(0)
  status      AttendanceStatus @default(OK)
  notes       String?
  computedAt  DateTime         @default(now())
  overrideBy  String? // StackAuth userId (plain string)
  overrideAt  DateTime?
  createdAt   DateTime         @default(now())

  @@unique([teamId, employeeId, date])
  @@index([teamId, employeeId, date])
  @@index([teamId, date])
  @@index([teamId, date, status])
}

// =====================================================
// HOLIDAY & PAYROLL
// =====================================================

model Holiday {
  id        String      @id @default(cuid())
  teamId    String
  date      DateTime
  kind      HolidayKind
  name      String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  @@unique([teamId, date])
  @@index([teamId, date])
}

model OtProfile {
  id        String   @id @default(cuid())
  teamId    String
  name      String   @default("Default")
  json      Json
  snapshot  Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  employees Employee[]

  @@unique([teamId, name])
  @@index([teamId])
}

model PayrollPeriod {
  id                String        @id @default(cuid())
  teamId            String
  title             String
  mode              PayrollMode
  startDate         DateTime
  endDate           DateTime
  status            PayrollStatus @default(DRAFT)
  otProfileSnapshot Json?
  timezone          String? // e.g. "Asia/Bangkok"

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  rows PayrollRow[]

  @@index([teamId, startDate, endDate])
}

model PayrollRow {
  id            String        @id @default(cuid())
  teamId        String
  periodId      String
  period        PayrollPeriod @relation(fields: [periodId], references: [id], onDelete: Cascade)
  employeeId    String
  employee      Employee      @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  basePay       Decimal       @db.Decimal(12, 2)
  otPay         Decimal       @db.Decimal(12, 2)
  lateDeduction Decimal       @db.Decimal(12, 2)
  ssf           Decimal       @db.Decimal(12, 2)
  adjustments   Decimal       @db.Decimal(12, 2)
  adjustNote    String?
  adjustBy      String? // StackAuth userId (plain string)
  netPay        Decimal       @db.Decimal(12, 2)
  workMinutes   Int           @default(0)
  otMinutes     Int           @default(0)
  lateMinutes   Int           @default(0)
  data          Json?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@unique([teamId, periodId, employeeId])
  @@index([teamId, employeeId, periodId])
  @@index([teamId, employeeId])
  @@index([teamId, periodId])
}

// =====================================================
// AUDIT LOGS
// =====================================================
model AuditLog {
  id        String      @id @default(cuid())
  teamId    String
  entity    String // e.g. "Employee", "PayrollRow", "AttendanceDay"
  entityId  String // the ID of the entity being acted upon
  action    AuditAction
  data      Json // snapshot of the entity data
  metadata  Json?
  userId    String?
  createdAt DateTime    @default(now())

  @@index([teamId, entity])
  @@index([teamId, createdAt])
  @@index([teamId, userId])
}
